{
    "id": "scale-template-logstash",
    "cpus": 0.5,
    "mem": 1024,
    "disk": 256,
    "instances": 1,
    "container": {
        "docker": {
            "image": "geoint/scale-logstash",
            "network": "BRIDGE",
            "portMappings": [
                {
                    "containerPort": 8000,
                    "hostPort": 9229,
                    "protocol": "tcp",
                    "labels": {
                        "VIP_0": "/scale-template-logstash:8000"
                    }
                },
                {
                    "containerPort": 80,
                    "hostPort": 0,
                    "protocol": "tcp",
                    "labels": {
                        "VIP_1": "/scale-template-logstash:80"
                    }
                }
            ],
            "forcePullImage": true
        },
        "type": "DOCKER",
        "volumes": []
    },
    "env": {
        "LOGSTASH_ARGS": "-w 1",
        "ELASTICSEARCH_URLS": ""
    },
    "healthChecks": [
        {
            "protocol": "MESOS_HTTP",
            "path": "/",
            "gracePeriodSeconds": 300,
            "intervalSeconds": 30,
            "portIndex": 1,
            "timeoutSeconds": 15,
            "maxConsecutiveFailures": 3
        }
    ],
    "uris": []
}